{
  "name": "@diplodoc/package-template",
  "version": "1.0.0",
  "description": "Template package for Diplodoc platform development",
  "main": "index.js",
  "types": "index.d.ts",
  "homepage": "https://diplodoc.com/",
  "engines": {
    "npm": ">=11.5.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diplodoc-platform/package-template.git"
  },
  "bugs": {
    "url": "https://github.com/diplodoc-platform/diplodoc/issues"
  },
  "private": true,
  "author": "",
  "license": "MIT",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:js": "./esbuild/build.js",
    "build:declarations": "tsc --emitDeclarationOnly --outDir .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "test": "exit 0"
  },
  "devDependencies": {
    "@diplodoc/tsconfig": "^1.0.2",
    "esbuild": "^0.19.9",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.3"
  }
}
